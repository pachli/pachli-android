<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:layout_height="wrap_content"
    tools:layout_width="match_parent"
    tools:parentTag="RadioGroup">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/compose_quote_policy_title"
        android:textSize="?attr/status_text_medium"
        android:gravity="center_vertical"
        android:textStyle="normal|bold" />

    <RadioButton
        android:id="@+id/publicRadioButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:button="@drawable/ic_public_24dp"
        android:paddingStart="10dp"
        android:paddingEnd="0dp"
        android:text="@string/pref_quote_policy_public"
        android:textColor="?android:textColorTertiary"
        app:buttonTint="@color/compound_button_color" />

    <RadioButton
        android:id="@+id/followersRadioButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:button="@drawable/ic_lock_24dp"
        android:paddingStart="10dp"
        android:paddingEnd="0dp"
        android:text="@string/pref_quote_policy_followers"
        android:textColor="?android:textColorTertiary"
        app:buttonTint="@color/compound_button_color" />

    <RadioButton
        android:id="@+id/nobodyRadioButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:button="@drawable/ic_hide_media_24dp"
        android:paddingStart="10dp"
        android:paddingEnd="0dp"
        android:text="@string/pref_quote_policy_nobody"
        android:textColor="?android:textColorTertiary"
        app:buttonTint="@color/compound_button_color" />
</merge>
